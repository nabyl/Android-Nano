<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yoosufnabeel.appportfolio.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Nano Degree Apps!"
        android:textSize="25sp"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
       />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Popular Movies"
        android:id="@+id/btnPopularMovies"
        android:layout_below="@+id/textView"
        android:layout_marginTop="33dp"
        android:layout_alignEnd="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:background="@color/colorAccent"
        android:textColor="#fff"
        android:layout_marginBottom="6dp"
        android:onClick="showAppScreen"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stock Hawk"
        android:id="@+id/btnStockHawk"
        android:background="@color/colorAccent"
        android:textColor="#fff"
        android:layout_below="@+id/btnPopularMovies"
        android:layout_alignStart="@+id/btnPopularMovies"
        android:layout_alignEnd="@+id/btnPopularMovies"
        android:layout_marginBottom="6dp"
        android:onClick="showAppScreen"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Build it bigger"
        android:id="@+id/btnBuildItBigger"
        android:background="@color/colorAccent"
        android:textColor="#fff"
        android:layout_below="@+id/btnStockHawk"
        android:layout_alignEnd="@+id/btnStockHawk"
        android:layout_alignStart="@+id/btnStockHawk"
        android:layout_marginBottom="6dp"
        android:onClick="showAppScreen"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make your app material"
        android:id="@+id/btnMakeMaterial"
        android:background="@color/colorAccent"
        android:textColor="#fff"
        android:layout_below="@+id/btnBuildItBigger"
        android:layout_alignStart="@+id/btnBuildItBigger"
        android:layout_alignEnd="@+id/btnBuildItBigger"
        android:layout_marginBottom="6dp"
        android:onClick="showAppScreen"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go ubiquitous"
        android:id="@+id/btnGoUbiquitous"
        android:background="@color/colorAccent"
        android:textColor="#fff"
        android:layout_below="@+id/btnMakeMaterial"
        android:layout_alignStart="@+id/btnMakeMaterial"
        android:layout_alignEnd="@+id/btnMakeMaterial"
        android:layout_marginBottom="6dp"
        android:onClick="showAppScreen"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capstone"
        android:id="@+id/btnCapstone"
        android:background="@color/colorAccent"
        android:textColor="#fff"
        android:layout_below="@+id/btnGoUbiquitous"
        android:layout_alignEnd="@+id/btnGoUbiquitous"
        android:layout_alignStart="@+id/btnGoUbiquitous"
        android:onClick="showAppScreen"
        />


</RelativeLayout>
